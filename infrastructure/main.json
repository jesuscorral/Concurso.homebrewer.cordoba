{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.36.1.42791",
      "templateHash": "16921910492292197363"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "imageName": "jesuscorral/concursohomebrewer:02",
    "prefix": "app-j01-",
    "environment_name": "prod",
    "managed_identity_resource_suffix": "id",
    "key_vault_resource_suffix": "kv",
    "container_app_environment_resource_suffix": "cae",
    "container_app_resource_suffix": "ca",
    "managged_identity_name": "[format('{0}-{1}-{2}', variables('prefix'), variables('environment_name'), variables('managed_identity_resource_suffix'))]",
    "key_vault_name": "[format('{0}-{1}-{2}', variables('prefix'), variables('environment_name'), variables('key_vault_resource_suffix'))]",
    "container_app_environment_name": "[format('{0}-{1}-{2}', variables('prefix'), variables('environment_name'), variables('container_app_environment_resource_suffix'))]",
    "container_app_name": "[format('{0}-{1}-{2}', variables('prefix'), variables('environment_name'), variables('container_app_resource_suffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2025-01-31-preview",
      "name": "[variables('managged_identity_name')]",
      "location": "[variables('location')]"
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2024-12-01-preview",
      "name": "[variables('key_vault_name')]",
      "location": "[variables('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managged_identity_name')), '2025-01-31-preview').principalId]",
            "permissions": {
              "keys": [
                "get",
                "list"
              ],
              "secrets": [
                "get",
                "list"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managged_identity_name'))]"
      ]
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2025-02-02-preview",
      "name": "[variables('container_app_environment_name')]",
      "location": "[variables('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2025-02-02-preview",
      "name": "[variables('container_app_name')]",
      "location": "[variables('location')]",
      "properties": {
        "environmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('container_app_environment_name'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "allowInsecure": true
          }
        },
        "template": {
          "containers": [
            {
              "name": "app-container",
              "image": "[variables('imageName')]",
              "resources": {
                "cpu": 2,
                "memory": "4Gi"
              },
              "env": [
                {
                  "name": "KeyVault__BaseUrl",
                  "value": "[reference(resourceId('Microsoft.KeyVault/vaults', variables('key_vault_name')), '2024-12-01-preview').vaultUri]"
                },
                {
                  "name": "AZURE_CLIENT_ID",
                  "value": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managged_identity_name'))]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 1
          }
        }
      },
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managged_identity_name')))]": {}
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('container_app_environment_name'))]",
        "[resourceId('Microsoft.KeyVault/vaults', variables('key_vault_name'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managged_identity_name'))]"
      ]
    }
  ]
}