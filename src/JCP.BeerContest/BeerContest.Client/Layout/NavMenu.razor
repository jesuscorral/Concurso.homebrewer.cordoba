@using Microsoft.AspNetCore.Components.Authorization
@using BeerContest.Domain.Models
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="nav-header">
    <button title="Navigation menu" class="nav-toggler" @onclick="ToggleNavMenu">
        <i class="fa fa-bars"></i>
    </button>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column p-3">
        <div class="nav-brand mb-4 text-center">
            <i class="fa fa-beer fa-2x text-amber"></i>
            <div class="mt-2 fw-bold">Beer Contest</div>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="fa fa-home" aria-hidden="true"></i> Home
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="rules">
                <i class="fa fa-book" aria-hidden="true"></i> Contest Rules
            </NavLink>
        </div>
        
        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-section-header mt-3 mb-2 text-amber">
                    <i class="fa fa-user me-2"></i> Account
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="Account/Register">
                        <i class="fa fa-user-plus" aria-hidden="true"></i> Register
                    </NavLink>
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="Account/Login">
                        <i class="fa fa-sign-in-alt" aria-hidden="true"></i> Login
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link" href="register-judge">
                        <i class="fa fa-award" aria-hidden="true"></i> Register as Judge
                    </NavLink>
                </div>
            </NotAuthorized>

            <Authorized>
                <AuthorizeView Roles="@($"{UserRole.Participant}")">
                    <Authorized Context="authContext">
                        <div class="nav-section-header mt-3 mb-2 text-amber">
                            <i class="fa fa-flask me-2"></i> Participant
                        </div>
                         <div class="nav-item">
                            <NavLink class="nav-link" href="register-beer">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i> Register Beer
                            </NavLink>
                        </div>
                        <div class="nav-item">
                            <NavLink class="nav-link" href="register-judge">
                                <i class="fa fa-award" aria-hidden="true"></i> Register as Judge
                            </NavLink>
                        </div>
                        <div class="nav-item">
                            <NavLink class="nav-link" href="my-beers">
                                <i class="fa fa-beer" aria-hidden="true"></i> My Beers
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
               
                <AuthorizeView Roles="@($"{UserRole.Judge},{UserRole.Administrator}")">
                    <Authorized Context="authContext">
                        <div class="nav-section-header mt-3 mb-2 text-amber">
                            <i class="fa fa-gavel me-2"></i> Judge
                        </div>
                        <div class="nav-item">
                            <NavLink class="nav-link" href="judge-beers">
                                <i class="fa fa-star" aria-hidden="true"></i> Judge Beers
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- Using exact enum value names for roles -->
                <AuthorizeView Roles="@UserRole.Administrator.ToString()">
                    <Authorized Context="authContext">

                        <div class="nav-section-header mt-3 mb-2 text-amber">
                            <i class="fa fa-cog me-2"></i> Administration
                        </div>
                        
                        <div class="nav-item">
                            <NavLink class="nav-link" href="user-management">
                                <i class="fa fa-users" aria-hidden="true"></i> User Management
                            </NavLink>
                        </div>
                        <div class="nav-item">
                            <NavLink class="nav-link" href="generate-labels">
                                <i class="fa fa-tags" aria-hidden="true"></i> Beer Labels
                            </NavLink>
                        </div>
                        <div class="nav-item">
                            <NavLink class="nav-link" href="contest-management">
                                <i class="fa fa-trophy" aria-hidden="true"></i> Contest Management
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </Authorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
