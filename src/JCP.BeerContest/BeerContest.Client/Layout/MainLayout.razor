@inherits LayoutComponentBase
@using Blazored.Toast.Configuration

<BlazoredToasts Position="ToastPosition.TopRight"
                Timeout="10"
                IconType="IconType.FontAwesome"
                ErrorIcon="fa fa-times-circle"
                InfoIcon="fa fa-info-circle"
                SuccessIcon="fa fa-check-circle"
                WarningIcon="fa fa-exclamation-triangle"
                ShowProgressBar="@true"
                ShowCloseButton="@true"
                MaxToastCount="3">
    <CloseButtonContent>
        <div>
            <span class="myCloseButtonStyleClass">&times;</span>
        </div>
    </CloseButtonContent>
</BlazoredToasts>

<div class="beer-contest-layout">
    <!-- Header with logo and login -->
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo-container">
                    <a href="/" class="logo">
                        <i class="fa fa-beer me-2"></i>
                        <span>Beer Contest</span>
                    </a>
                </div>
                <div class="login-container">
                    <LoginDisplay />
                </div>
            </div>
        </div>
    </header>

    <!-- Main content area with sidebar and content -->
    <div class="main-content">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main class="content-area">
            <div class="container">
                @Body
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <i class="fa fa-beer me-2"></i>
                    <span>Beer Contest</span>
                </div>
                <div class="footer-links">
                    <a href="/">Home</a>
                    <a href="/rules">Rules</a>
                    <a href="/register-judge">Become a Judge</a>
                </div>
                <div class="footer-copyright">
                    &copy; @DateTime.Now.Year Beer Contest. All rights reserved.
                </div>
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
